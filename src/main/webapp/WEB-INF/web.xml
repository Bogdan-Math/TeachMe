<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-name>TeachMe</display-name>

    <!-- mapping request {ip:port}/TeachMe/index to IndexServlet -->
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>ua.teachme.web.IndexServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!-- mapping request {ip:port}/TeachMe/users to UserServlet -->
    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ua.teachme.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!-- mapping request {ip:port}/TeachMe/notations to NotationServlet -->
    <servlet>
        <servlet-name>notationServlet</servlet-name>
        <servlet-class>ua.teachme.web.NotationServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>notationServlet</servlet-name>
        <url-pattern>/notations</url-pattern>
    </servlet-mapping>

</web-app>
